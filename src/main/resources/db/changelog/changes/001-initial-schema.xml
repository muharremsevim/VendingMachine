<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="001" author="vending-machine">
        <!-- Money table -->
        <createTable tableName="money">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="decimal(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="is_coin" type="boolean"/>
            <column name="is_active" type="boolean" defaultValue="true"/>
            <column name="created_by" type="varchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <!-- Product table -->
        <createTable tableName="product">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="decimal(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(1000)"/>
            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="boolean" defaultValue="true"/>
            <column name="created_by" type="varchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <!-- Vending Machine table -->
        <createTable tableName="vending_machine">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="total_money" type="decimal(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="boolean" defaultValue="true"/>
            <column name="created_by" type="varchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <!-- Vending Machine Vault table -->
        <createTable tableName="vending_machine_vault">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="vending_machine_id" type="uuid">
                <constraints nullable="false"
                           foreignKeyName="fk_vault_vending_machine"
                           references="vending_machine(id)"/>
            </column>
            <column name="money_id" type="uuid">
                <constraints nullable="false"
                           foreignKeyName="fk_vault_money"
                           references="money(id)"/>
            </column>
            <column name="quantity" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="boolean" defaultValue="true"/>
            <column name="created_by" type="varchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="varchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
        </createTable>

        <!-- Add unique constraint for vending_machine_id and money_id -->
        <addUniqueConstraint tableName="vending_machine_vault"
                            columnNames="vending_machine_id,money_id"
                            constraintName="uk_vault_machine_money"/>
    </changeSet>
</databaseChangeLog> 